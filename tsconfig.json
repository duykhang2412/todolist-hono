{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "baseUrl": "./src", // Đặt base URL là root của dự án
        "paths": {
            "*": [
                "*"
            ]
            // Alias cho src/
        },
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ]
}